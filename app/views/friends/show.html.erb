
<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"></p>
  <p><%= @friend.email %></p>
  <p><%= @friend.phone %></p>
  <p><%= @friend.twitter %></p>
  <hr class="my-4">
  <p></p>
  <%= link_to 'Editar', edit_friend_path(@friend), class:"btn btn-sm btn-dark" %>   
  <%= link_to 'Voltar', friends_path, class:"btn btn-sm btn-dark" %>
  <%= link_to 'Apagar', @friend, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-sm btn-outline-danger"%>
</div>


